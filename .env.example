# ==========================================
# Environment Configuration Template
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ==========================================
# Supabase Configuration (Required)
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (for admin operations only)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database password (for direct connections)
SUPABASE_DATABASE_PASSWORD=your_database_password

# Access token for CLI operations
SUPABASE_ACCESS_TOKEN=your_access_token

# ==========================================
# Application Configuration
# ==========================================
# Environment mode
NODE_ENV=development

# Database operation mode
VITE_DATABASE_MODE=supabase

# Organization information
VITE_ORG_NAME=your_organization
VITE_PROJECT_NAME=your_project_name

# ==========================================
# Security Configuration
# ==========================================
# Session timeout in seconds (default: 24 hours)
VITE_SESSION_TIMEOUT=86400

# Maximum file upload size in bytes (default: 10MB)
VITE_MAX_FILE_SIZE=10485760

# Worker timeout in milliseconds (default: 30 seconds)
VITE_WORKER_TIMEOUT=30000

# Maximum retry attempts for failed operations
VITE_MAX_RETRY_ATTEMPTS=3

# Enable security audit logging
VITE_ENABLE_AUDIT_LOGGING=true

# ==========================================
# Development Configuration
# ==========================================
# Enable detailed logging in development
VITE_ENABLE_DEBUG_LOGGING=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# API base URL (for external services)
VITE_API_BASE_URL=https://api.yourservice.com

# ==========================================
# Optional Integrations
# ==========================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn

# Analytics tracking ID
VITE_ANALYTICS_ID=your_analytics_id

# Feature flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_ADVANCED_SEARCH=true

# ==========================================
# Security Headers Configuration
# ==========================================
# Content Security Policy
VITE_CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'"

# Enable HTTPS enforcement
VITE_FORCE_HTTPS=true

# Cookie security settings
VITE_SECURE_COOKIES=true
VITE_COOKIE_SAME_SITE=strict