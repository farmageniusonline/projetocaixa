# ==========================================
# Production Environment Configuration
# ==========================================
# This file should be used as a template for production deployment
# Configure these values in your EasyPanel environment variables

# ==========================================
# Supabase Configuration (Required)
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (for admin operations only)
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database password (for direct connections)
SUPABASE_DATABASE_PASSWORD=your_database_password

# Access token for CLI operations
SUPABASE_ACCESS_TOKEN=your_access_token

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
VITE_DATABASE_MODE=supabase

# Organization information
VITE_ORG_NAME=your_organization
VITE_PROJECT_NAME=your_project_name

# ==========================================
# Security Configuration (Production)
# ==========================================
VITE_SESSION_TIMEOUT=86400
VITE_MAX_FILE_SIZE=10485760
VITE_WORKER_TIMEOUT=30000
VITE_MAX_RETRY_ATTEMPTS=3
VITE_ENABLE_AUDIT_LOGGING=true

# ==========================================
# Production Settings
# ==========================================
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# ==========================================
# Security Headers Configuration
# ==========================================
VITE_FORCE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_COOKIE_SAME_SITE=strict

# ==========================================
# Feature Flags
# ==========================================
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_ADVANCED_SEARCH=true